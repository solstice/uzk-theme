%% UzK - A BEAMER THEME FOR THE UNIVERSITY OF COLOGNE
%% http://solstice.github.com/uzk-theme/
\ProvidesPackage{beamercolorthemeUzK}[2009/12/10]

\mode<presentation>

%% Die Farben stammen aus dem 2-D Handbuch Corporate Design

\definecolor{titlered}{RGB}{205,9,33}
\definecolor{textgrey}{RGB}{43,88,108}

%% Fakultaetsfarben
\definecolor{wiso}{RGB}{131,175,35}
\definecolor{wiso{light}}{RGB}{171, 215,75}
\definecolor{jura}{RGB}{125,50,29}
\definecolor{jura{light}}{RGB}{155,80,59}
\definecolor{medizin}{RGB}{175,17,29}
\definecolor{medizin{light}}{RGB}{205,37,59}
\definecolor{philo}{RGB}{89,15,104}
\definecolor{philo{light}}{RGB}{119,45,134}
\definecolor{matnat}{RGB}{0,130,198}
\definecolor{matnat{light}}{RGB}{30,160,228}
\definecolor{human}{RGB}{219,166,25}
\definecolor{human{light}}{RGB}{249,196,55}
\definecolor{verw}{RGB}{145,196,234}
\definecolor{verw{light}}{RGB}{175,226,255}

%% Grautoene
\definecolor{blaugrau}{RGB}{122,147,171}
\definecolor{blaugrauhell}{RGB}{200,209,219}
\definecolor{blaugraumittel}{RGB}{165,182,199}
\definecolor{blaugraudunkel}{RGB}{74,101,125}
\definecolor{hellerfond}{RGB}{227,232,235}
\definecolor{blauschwarz}{RGB}{50,71,91}

\setbeamercolor*{uzk wiso}{fg=black, bg=wiso}
\setbeamercolor*{uzk jura}{fg=black, bg=jura}
\setbeamercolor*{uzk medizin}{fg=black, bg=medizin}
\setbeamercolor*{uzk philo}{fg=black, bg=philo}
\setbeamercolor*{uzk matnat}{fg=black, bg=matnat}
\setbeamercolor*{uzk human}{fg=black, bg=human}
\setbeamercolor*{uzk verw}{fg=black, bg=verw}

%% Definiere die Farbpaletten
%% Farbige Paletten
\ifbeamer@UzK@colorful
  \setbeamercolor*{palette primary}{fg=white,bg=\fak{light}}
  \setbeamercolor*{palette secondary}{fg=white,bg=blaugrauhell}
  \setbeamercolor*{palette tertiary}{fg=white,bg=\fak}
  \setbeamercolor*{palette quaternary}{fg=white,bg=\fak}
\else
%% graue Paletten
  \setbeamercolor*{palette primary}{fg=white,bg=blaugrauhell}
  \setbeamercolor*{palette secondary}{fg=white,bg=blaugrauhell}
  \setbeamercolor*{palette tertiary}{fg=blaugraudunkel,bg=hellerfond}
  \setbeamercolor*{palette quaternary}{fg=blaugraudunkel,bg=hellerfond}
\fi

\setbeamercolor*{author in head/foot}{parent=palette primary}

%% Farben fuer die block-Umgebung
\setbeamercolor*{block title}{bg=blaugraumittel, fg=blauschwarz}
\setbeamercolor*{block body}{bg=hellerfond}

%% Exampleblock
\setbeamercolor*{block title example}{bg=\fak, fg=white}%
\setbeamercolor*{block body example}{bg=hellerfond}%

%% Alertblock
\setbeamercolor*{block title alerted}{bg=titlered, fg=white}%
\setbeamercolor*{block body alerted}{bg=hellerfond}%


\setbeamercolor*{date in head/foot}{fg=black}

\setbeamercolor*{frametitle}{fg=titlered}
\setbeamercolor*{titlelike}{fg=titlered}

\setbeamercolor*{normal text}{fg=blaugraudunkel} 
\setbeamercolor*{section in toc}{fg=blaugraudunkel}
\setbeamercolor*{item}{fg=blaugraudunkel}

\setbeamercolor*{button}{bg=hellerfond}

\mode
<all>
